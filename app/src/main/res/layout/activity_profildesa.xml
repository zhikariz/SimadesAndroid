<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kode Desa"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtIdDesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nama Desa"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtNamaDesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kecamatan"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtKecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kabupaten"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtKabupaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Provinsi"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtProvinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nama Kepala Desa"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtNamaKepdes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NIP Kepala Desa"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtNipKades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Alamat Desa"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nomor Telepon"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kode Pos"
            android:textColor="#000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtKodePos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnEditProfilDesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profil" />

    </LinearLayout>

</ScrollView>